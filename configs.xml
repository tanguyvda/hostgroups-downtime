<configs>
    <title>Hostgroups Downtime Monitoring</title>
    <author>Tanguy Charles</author>
    <email>contact@centreon.com</email>
    <website>http://www.centreon.com</website>
    <description>This widget displays hostgroups that are in downtime.</description>
    <version>19.10.0</version>
    <keywords>centreon, widget, hostgroup, host, monitoring, downtime</keywords>
    <screenshot></screenshot>
    <thumbnail>./widgets/centreon-hostgroups-downtime-widget/resources/centreon-logo.png</thumbnail>
    <url>./widgets/centreon-hostgroups-downtime-widget/index.php</url>
    <autoRefresh>10</autoRefresh>
    <preferences>
        <preference label="Hostgroup" name="hg_search" defaultValue="" type="hostGroupMulti" header="Filters"/>
        <preference label="In downtime" name="in_downtime" defaultValue="1" type="boolean"/>
        <preference label="Enable Detailed Mode" name="enable_detailed_mode" defaultValue="0" type="boolean"/>
        <preference label="Results" name="entries" defaultValue="20" type="range" min="10" max="100" step="10"/>
        <preference label="Order By" name="order_by" defaultValue="" type="sort">
            <option value="name" label="Hostgroup Name"/>
        </preference>
        <preference label="Refresh Interval (seconds)" name="refresh_interval" defaultValue="60" type="text" header="Misc"/>
        <preference label="Enable pagination and more actions" name="more_views" defaultValue="0" type="boolean"/>
    </preferences>
</configs>
